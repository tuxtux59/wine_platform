<div class="space-y-4 pt-12">
  <em class="mx-auto w-1/5 block"><%= @saved_searches.count %> Bottles</em>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Saved searches" %>

  <div class="space-y-4 mx-auto w-3/4 flex justify-between items-center">
    <h1 class="font-bold text-4xl">Saved searches</h1>
    <%= link_to "New saved search", new_saved_search_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="saved_searches" class="mx-auto w-3/4">
    <% @saved_searches.each do |saved_search| %>
      <%= render saved_search %>
      <p>
        <%= link_to "Show this saved search", saved_search, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
